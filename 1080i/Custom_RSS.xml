<window type="dialog" id="3005">
    <zorder>3</zorder>
    <allowoverlay>no</allowoverlay>
    <visible>!Window.IsVisible(startup) + Skin.HasSetting(rss.enabled)</visible>
    <controls>
        <control type="rss">
            <posx>0</posx>
            <posy>14</posy>
            <height>30</height>
            <width>1920</width>
            <font>Font-Condensed-S28</font>
            <urlset>1</urlset>
            <textcolor>Mod_Tags</textcolor>
            <titlecolor>Mod_Tags_Dark</titlecolor>
            <shadowcolor>Mod_Shadow</shadowcolor>
            <headlinecolor>Mod_Tags_Dark</headlinecolor>
            <visible>!Window.IsVisible(fullscreenvideo) + !Window.IsVisible(visualisation) + !Window.IsVisible(screencalibration) + !Window.IsVisible(screensaver) + !Window.IsVisible(slideshow)</visible>
        </control>
    </controls>
</window> 