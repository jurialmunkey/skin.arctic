<window>
    <defaultcontrol>-</defaultcontrol>
    <zorder>5</zorder>
    <controls>
        <control type="group">
            <visible>Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation)</visible>
            <animation type="WindowOpen">
                <effect type="fade" start="0" end="100" time="300" delay="200" tween="sine" easing="inout" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" start="100" end="0" time="200" tween="sine" easing="inout" />
                <effect type="slide" start="0" end="0,-50" time="200" tween="sine" easing="inout" />
            </animation>
            <animation type="Visible">
                <effect type="fade" start="0" end="100" time="300" delay="200" tween="sine" easing="inout" />
            </animation>
            <animation type="Hidden">
                <effect type="fade" start="100" end="0" time="200" tween="sine" easing="inout" />
                <effect type="slide" start="0" end="0,-50" time="200" tween="sine" easing="inout" />
            </animation>
            <control type="image">
                <description>Mute image</description>
                <posx>1845</posx>
                <posy>-17</posy>
                <width>90</width>
                <height>90</height>
                <texture>overlays/volume/muted.png</texture>
                <colordiffuse>$VAR[osd.text.normal]</colordiffuse>
                <aspectratio aligny="center">keep</aspectratio>
            </control>
        </control>
    </controls>
</window>