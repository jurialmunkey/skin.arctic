<window>
	<zorder>5</zorder>
    <controls>
    	<control type="group">
    		<visible>Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation)</visible>
    		<!-- Volume Control -->
			<control type="group">  
				<animation type="WindowOpen">
					<effect type="fade" start="0" end="100" time="300" tween="sine" easing="inout" />
					<effect type="slide" start="0,-20" end="0" time="280" tween="sine" easing="inout" />
				</animation>
				<animation type="WindowClose">
					<effect type="fade" start="100" end="0" time="200" tween="sine" easing="inout" />
					<effect type="slide" start="0" end="0,-20" time="200" tween="sine" easing="inout" />
				</animation>
				<animation type="Visible">
					<effect type="fade" start="0" end="100" time="300" tween="sine" easing="inout" />
					<effect type="slide" start="0,-20" end="0" time="280" tween="sine" easing="inout" />
				</animation>
				<animation type="Hidden">
					<effect type="fade" start="100" end="0" time="200" tween="sine" easing="inout" />
					<effect type="slide" start="0" end="0,-20" time="200" tween="sine" easing="inout" />
				</animation>
				<animation effect="slide" end="20" condition="Skin.HasSetting(osd.wideinfo) + Window.IsActive(videoosd)">Conditional</animation>
				<visible>!Player.Passthrough + [Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation)] + Window.IsActive(volumebar) + ![Player.Muted | substring(Player.Volume,-60.0)]</visible>
				<posy>-66</posy>
				<posx>1670</posx>
				<control type="image">
					<posx>0</posx>
					<posy>36</posy>
					<width>250</width>
					<height>110</height>
					<bordertexture border="40">arctic/common/border-20.png</bordertexture>
					<bordersize>20</bordersize>
					<texture border="25">arctic/common/whitepanel8.png</texture>
					<aspectratio>stretch</aspectratio>
					<colordiffuse>mod-osdbar</colordiffuse>
					<visible>!Skin.HasSetting(osd.darkpanel) + [!Skin.HasSetting(osd.wideinfo) | [!Window.IsActive(seekbar) + !Window.IsActive(videoosd)] | [Skin.HasSetting(osd.wideinfo) + !Window.IsVisible(videoosd)]]</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>36</posy>
					<width>250</width>
					<height>110</height>
					<bordertexture border="40">arctic/common/border-20.png</bordertexture>
					<bordersize>20</bordersize>
					<texture border="25">arctic/common/panel.png</texture>
					<aspectratio>stretch</aspectratio>
					<colordiffuse>mod-osdbar-dark</colordiffuse>
					<visible>Skin.HasSetting(osd.darkpanel) + [!Skin.HasSetting(osd.wideinfo) | [!Window.IsActive(seekbar) + !Window.IsActive(videoosd)] | [Skin.HasSetting(osd.wideinfo) + !Window.IsVisible(videoosd)]]</visible>
				</control>
				<control type="group">
					<posx>145</posx>
					<posy>28</posy>
					<control type="label">
						<description>Volume label</description>
						<posx>-5</posx>
						<posy>51</posy>
						<width>150</width>
						<label>$INFO[Player.Volume]</label>
						<font>Font-Alaska-S28-L</font>
						<textcolor>$VAR[osd.text.dark]</textcolor>
						<shadowcolor>1a000000</shadowcolor>
						<align>right</align>
						<scroll>No</scroll>
					</control>
					<control type="progress" id="22">
						<visible>false</visible>
						<info>Player.Volume</info>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>27</posy>
						<width>80</width>
						<height>80</height>
						<texture>overlays/volume/volume-back.png</texture>
						<aspectratio align="center">keep</aspectratio>
						<colordiffuse>$VAR[osd.text.normal]</colordiffuse>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>27</posy>
						<width>80</width>
						<height>80</height>
						<texture>$INFO[Control.GetLabel(22),overlays/volume/progress/p,.png]</texture>
						<aspectratio align="center">keep</aspectratio>
					</control>
				</control>
			</control>
			
			
			<!-- Passthrough to Audio Device Notification-->
			<control type="group">
				<animation type="Visible">
					<effect type="fade" start="0" end="100" time="300" tween="sine" easing="inout" />
					<effect type="slide" start="0,-30" end="0" time="300" tween="sine" easing="inout" />
				</animation>
				<animation type="Hidden">
					<effect type="fade" start="100" end="0" time="200" tween="sine" easing="inout" />
					<effect type="slide" start="0" end="0,-30" time="200" tween="sine" easing="inout" />
				</animation>
				<visible>Player.Passthrough + [Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation)] + Window.IsActive(volumebar)</visible>
				<control type="label">
					<description>Volume label</description>
					<posx>1900</posx>
					<posy>-11</posy>
					<width>500</width>
					<height>78</height>
					<label>$LOCALIZE[29802]</label>
					<font>Font-Alaska-S28-L</font>
					<textcolor>$VAR[osd.text.dark]</textcolor>
					<shadowcolor>33ffffff</shadowcolor>
					<align>right</align>
					<scroll>No</scroll>
				</control>
			</control>
        </control>
        
        
    	<!-- Non OSD -->
        <control type="group">
            <posx>1745</posx>
            <posy>24</posy>
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="100" time="300" tween="sine" easing="in"  />
                <effect type="slide" start="0,-75" end="0,0" time="350" tween="cubic" easing="out" />
            </animation>
            <animation type="WindowClose" reversible="false">
                <effect type="fade" start="100" end="0" time="250" tween="sine" easing="out" />
                <effect type="slide" start="0,0" end="0,-75" time="300" tween="sine" easing="out" />
                <effect type="slide" end="0,-75" time="700" delay="300" />
            </animation>
            <animation effect="slide" end="-76" time="300" tween="sine" easing="inout" condition="Window.IsActive(busydialog)">Conditional</animation>            
            <visible>!Window.IsActive(fullscreenvideo) + !Window.IsActive(visualisation)</visible>
            <control type="group">
                <control type="image">
                    <posx>-4</posx>
                    <posy>27</posy>
                    <width>100</width>
                    <height>100</height>
                    <texture>overlays/volume/volume-back.png</texture>
                    <aspectratio align="center">keep</aspectratio>
                    <colordiffuse>Mod_Tags</colordiffuse>
                </control>
                <control type="group">
                    <visible>!Player.Passthrough</visible>
                    <control type="progress" id="20">
                        <visible>false</visible>
                        <info>Player.Volume</info>
                    </control>
                    <control type="image">
                        <posx>-4</posx>
                        <posy>27</posy>
                        <width>100</width>
                        <height>100</height>
                        <texture>$INFO[Control.GetLabel(20),overlays/volume/progress/p,.png]</texture>
                        <aspectratio align="center">keep</aspectratio>
                    </control>
                    <control type="label">
                        <description>Volume label</description>
                        <posx>0</posx>
                        <posy>27</posy>
                        <width>750</width>
                        <height>100</height>
                        <label>$INFO[Player.Volume]</label>
                        <font>Font-Alaska-S32-BL</font>
                        <textcolor>Mod_Tags</textcolor>
                        <scroll>false</scroll>
                        <align>right</align>
                    </control>
                </control>
                <control type="group">
                    <visible>Player.Passthrough</visible>
                    <control type="label">
                        <description>Passthrough label</description>
                        <posx>0</posx>
                        <posy>27</posy>
                        <width>750</width>
                        <height>100</height>
                        <label>$LOCALIZE[29802]</label>
                        <font>Font-Alaska-S32-BL</font>
                        <textcolor>Mod_Tags</textcolor>
                        <scroll>false</scroll>
                        <align>right</align>
                    </control>
                    <control type="image">
                        <posx>-4</posx>
                        <posy>27</posy>
                        <width>100</width>
                        <height>100</height>
                        <texture>dialogs/search/loading.png</texture>
                        <animation effect="rotate" center="auto" start="360" end="0" time="1500" loop="true" condition="Window.IsVisible(volumebar) + Player.Passthrough">Conditional</animation>
                        <aspectratio align="center">keep</aspectratio>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>