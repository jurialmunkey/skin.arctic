<includes>
<!-- ============== -->
<!-- Info Wall (63) -->
<!-- ============== -->
    <include name="Viewtype-InfoWall">
        <control type="group">
            <visible>Control.IsVisible(63) + !Window.IsActive(movieinformation)</visible>
            <include>CommonViewAnimations</include>
            <include>OptionsShutdownAnimation</include>
            <posx>36</posx>
			<posy>178</posy>
			<control type="group">
                <posx>0</posx>
                
                <control type="image">
                    <description>Landscape</description>
                    <posx>6</posx>
                    <posy>6</posy>
                    <width>828</width>
                    <height>464</height>
                    <texture background="true" diffuse="arctic/panel/fanart.png">$VAR[ListInfoLandscapeVar]</texture>
                    <aspectratio scalediffuse="false">stretch</aspectratio>
                    <fadetime>200</fadetime>
                </control>
                <control type="image">
                    <description>Border</description>
                    <posx>-4</posx>
                    <posy>-4</posy>
                    <width>848</width>
                    <height>484</height>
                    <texture border="25">arctic/common/border.png</texture>
                    <aspectratio>stretch</aspectratio>
                    <colordiffuse>Mod_Border</colordiffuse>
                </control> 
                <control type="group">
                    <posy>472</posy>
                    <control type="label">
                        <posx>24</posx>
                        <posy>27</posy>
                        <width>790</width>
                        <label>$INFO[ListItem.Label]</label>
                        <font>Font-Alaska-S32-BL</font>
                        <textcolor>Mod_Tags</textcolor>
                        <scroll>false</scroll>
                        <align>left</align>
                    </control>
                    <control type="textbox">
                        <posx>24</posx>
                        <posy>64</posy>
                        <width>790</width>
                        <height>170</height>
                        <label>$INFO[ListItem.Plot]</label>
                        <font>Font-Alaska-S25-NC</font>
                        <textcolor>Mod_Tags</textcolor>
                        <align>justify</align>
                        <autoscroll delay="13000" time="3000" repeat="13000" />
                        <visible>!substring(ListItem.Path,videodb://1/7,left)</visible>
                    </control>
                    <control type="textbox">
                        <posx>24</posx>
                        <posy>64</posy>
                        <width>790</width>
                        <height>170</height>
                        <font>Font-Alaska-S25-NC</font>
                        <textcolor>Mod_Tags</textcolor>
                        <align>justify</align>
						<autoscroll delay="5000" time="3000" repeat="5000" />
						<info>Window(home).Property(Set.Movies.ExtendedPlot)</info>
						<visible>substring(ListItem.Path,videodb://1/7,left)</visible>
                    </control>
                </control>
            </control>

            <control type="panel" id="63">
				<posx>840</posx>
				<posy>0</posy>
				<width>1008</width>
				<height>714</height>
                <include>FullscreenDimensions</include>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
                <pagecontrol>70</pagecontrol>
                <orientation>vertical</orientation>
                <viewtype label="42313">list</viewtype>
                <onup>63</onup>
                <ondown>63</ondown>
                <onleft condition="!Skin.HasSetting(KioskMode)">9010</onleft>
                <onleft condition="Skin.HasSetting(KioskMode)">63</onleft>
                <onright>70</onright>
                <preloaditems>2</preloaditems>
                <visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(actors) | Container.HasFolders | Container.Content(episodes) | Container.Content(seasons)</visible>
                <itemlayout width="168" height="238">
                    <control type="image">
                        <description>Poster</description>
                        <posx>6</posx>
                        <posy>6</posy>
                        <width>156</width>
                        <height>226</height>
                        <texture background="true" diffuse="arctic/panel/wall.png">$VAR[WallPoster]</texture>
                        <aspectratio>stretch</aspectratio>
                        <colordiffuse>cfffffff</colordiffuse>
                    </control>
                    <control type="image">
                        <description>Border</description>
                        <posx>-4</posx>
                        <posy>-4</posy>
                        <width>176</width>
                        <height>246</height>
                        <texture border="25">arctic/common/border.png</texture>
                        <aspectratio>stretch</aspectratio>
                        <colordiffuse>Mod_Border_Fade</colordiffuse>
                    </control>  
					<control type="image">
						<posx>6</posx>
						<posy>6</posy>
						<width>50</width>
						<height>50</height>
						<texture diffuse="arctic/overlay/50.png">$VAR[arctic.watched]</texture>
						<aspectratio scalediffuse="false" aligny="top" align="left">keep</aspectratio>
					</control>
                    <control type="image">
                        <description>Poster</description>
                        <posx>6</posx>
                        <posy>6</posy>
                        <width>156</width>
                        <height>226</height>
                        <texture border="10">arctic/panel/wall.png</texture>
                        <aspectratio>stretch</aspectratio>
                        <colordiffuse>Mod_Cover_Fade</colordiffuse>
                    </control>
					
                </itemlayout>
                <focusedlayout width="168" height="238">
                    <control type="group">
                        <animation effect="zoom" start="75" end="122" time="150" center="auto">Focus</animation>
						<control type="image">
							<description>Poster</description>
							<posx>6</posx>
							<posy>6</posy>
							<width>156</width>
							<height>226</height>
							<texture background="true" diffuse="arctic/panel/wall.png">$VAR[WallPoster]</texture>
							<aspectratio>stretch</aspectratio>
						</control>
						<control type="image">
                            <description>Border</description>
                            <posx>-4</posx>
                            <posy>-4</posy>
                            <width>176</width>
                            <height>246</height>
                            <texture border="52">arctic/common/border.png</texture>
                            <aspectratio>stretch</aspectratio>
                        </control> 
                        <control type="image">
                            <description>Border</description>
                            <posx>-4</posx>
                            <posy>-4</posy>
                            <width>176</width>
                            <height>246</height>
                            <texture border="52">arctic/common/border.png</texture>
                            <aspectratio>stretch</aspectratio>
                        </control> 
                        <control type="image">
							<posx>6</posx>
							<posy>6</posy>
							<width>50</width>
							<height>50</height>
							<texture>$VAR[arctic.watched]</texture>
							<aspectratio aligny="top" align="left">keep</aspectratio>
							<texture diffuse="arctic/overlay/50.png">$VAR[arctic.watched]</texture>
							<aspectratio scalediffuse="false" aligny="top" align="left">keep</aspectratio>
						</control>
                    </control>
                </focusedlayout>
            </control>
        </control>
        <control type="scrollbar" id="70">
			<description>Scrollbar</description>
			<width>26</width>
			<height>1080</height>
			<posx>1894</posx>
			<orientation>vertical</orientation>
			<textureslidernib flipx="true" >arctic/common/slider-nf-v.png</textureslidernib>
			<textureslidernibfocus flipx="true" >arctic/common/slider-fo-v.png</textureslidernibfocus>
			<showonepage>true</showonepage>
			<onleft>63</onleft>
			<onright condition="!Skin.HasSetting(KioskMode)">9010</onright>
			<onright condition="Skin.HasSetting(KioskMode)">63</onright>
			<animation effect="fade" start="100" end="0" time="300" tween="sine" easing="inout" condition="!Control.IsVisible(9772)">Conditional</animation>
			<animation effect="fade" start="40" end="100" time="300" tween="sine" easing="inout" condition="Control.HasFocus(70)">Conditional</animation>
			<animation effect="fade" start="100" end="40" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(70)">Conditional</animation>
			<visible>Control.IsVisible(63)</visible>
		</control>
    </include>    
</includes>